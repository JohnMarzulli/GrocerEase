{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Web: Vite dev server",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "dev"
            ],
            "cwd": "${workspaceFolder}/client",
            "console": "integratedTerminal",
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "name": "Test",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "test"
            ],
            "cwd": "${workspaceFolder}/client",
            "console": "integratedTerminal",
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "name": "Web: Chrome",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:5173",
            "webRoot": "${workspaceFolder}/client",
            "sourceMapPathOverrides": {
                "webpack:///src/*": "${webRoot}/src/*",
                "webpack:///./*": "${webRoot}/*",
                "webpack:///./src/*": "${webRoot}/src/*",
                "webpack:///*": "${webRoot}/*",
                "vite:///src/*": "${webRoot}/src/*",
                "vite:///*": "${webRoot}/*",
                "http://localhost:5173/src/*": "${webRoot}/src/*",
                "http://localhost:5173/*": "${webRoot}/*",
                "/@fs/*": "${webRoot}/*",
                "/src/*": "${webRoot}/src/*",
                "*": "${webRoot}/*"
            }
        }
    ],
    "compounds": [
        {
            "name": "Web: Dev + Browser",
            "configurations": [
                "Web: Vite dev server",
                "Web: Chrome"
            ]
        }
    ]
}